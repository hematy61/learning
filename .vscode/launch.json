{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "java",
      "name": "App",
      "request": "launch",
      "mainClass": "App",
      "projectName": ""
    },
    {
      "name": ".NET Core Launch (web)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/playgrounds/dotnet/bin/Debug/net7.0/dotnet.dll",
      "args": [],
      "cwd": "${workspaceFolder}/playgrounds/dotnet",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach"
    },
    {
      "type": "node-terminal",
      "name": "Run Script: node",
      "request": "launch",
      "command": "npm run node main.js",
      "cwd": "${workspaceFolder}/playgrounds/javascript"
    }
  ]
}
